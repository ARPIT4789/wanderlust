<% layout("/layouts/boilerplate")%>
    <div class="row">
        <div class="col-md-8 offset-2">
            <h3>create new list </h3>
            <form method="POST" action="/listings" novalidate class="needs-validation " enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter your title" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="description" id="description"
                        class="form-control" required></textarea>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <div>
                    <label for="image" class="form-label">Image file</label>
                    <input name="listing[image]" type="file" class="form-control" required>
                </div>
                <div class="row align-items-end">
                    <div>
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="price" type="text" class="form-control" required>
                        <div class="invalid-feedback">please fill this section</div>
                    </div>
                    <div>
                        <label for="category" class="form-label">Category</label>
                        <select name="listing[category]" required class="form-select">
                            <option selected value="">Select Category</option>
                            <option value="Trending">Trending</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Farms">Farms</option>
                            <option value="Castles">Castles</option>
                            <option value="Iconic Cities">Iconic Cities</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Amazing Pools">Amazing Pools</option>
                            <option value="Camping">Camping</option>
                            <option value="Arctic">Arctic</option>
                        </select>

                    </div>
                </div>
                <div>
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" id="country" placeholder="country" class="form-control"
                        required>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="lacation" placeholder="location"
                        class="form-control" required>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <br><br>
                <button class="btn btn-dark btn_col mb-3"> Add </button>
            </form>
        </div>
    </div>