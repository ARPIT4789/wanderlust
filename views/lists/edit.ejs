<% layout("/layouts/boilerplate")%>
    <div class="row">
        <div class="col-md-8 offset-2">
            <h3>Update Listing </h3>
            <form method="POST" action="/listings/<%= listing.id %>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="enter your title" type="text" class="form-control"
                        value="<%= listing.title %>" required>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="description" id="description"
                        class="form-control" required>
            <%= listing.description %>
            </textarea>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <div>
                    Original listing image <br>
                    <img src="<%=imageUrl%>" alt="original image">
                </div>
                <div>
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" type="file" class="form-control" value="<%= listing.image%>">
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <div>
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="price" type="text" class="form-control"
                        value="<%= listing.price %>" required>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <div>
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" required class="form-select">
                        <option selected value="">Select Category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Farms">Farms</option>
                        <option value="Castles">Castles</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Arctic">Arctic</option>
                    </select>

                </div>
                <div>
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" id="country" placeholder="country" class="form-control"
                        value="<%= listing.country %>" required>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="lacation" placeholder="location"
                        class="form-control" value="<%= listing.location %>" required>
                    <div class="invalid-feedback">please fill this section</div>
                </div>
                <br><br>
                <button class="btn btn-dark mb-3 btn_col"> Add </button>
            </form>
        </div>
    </div>