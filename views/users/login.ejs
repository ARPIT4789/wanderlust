<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-12 col-md-6 offset-md-3">
        <h2>Login on WanderLust</h2>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div>
                    <label for="username" id="username" class="form-label">Username</label>
                    <input name="username" placeholder="enter your username" type="text" class="form-control" required>
            </div>
            <div>
                    <label for="password" id="password" class="form-label">Password</label>
                    <input name="password" placeholder="enter your password" type="password" class="form-control" required>
            </div>
            <button class="btn btn-success mt-3">Login</button>
        </form>
    </div>
</div>
